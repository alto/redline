<div class="prefix_3 grid_6 suffix_3">
  <%- form_tag search_url, :method => :get do -%>
    <label for="query">Enter link</label>
    <%= text_field_tag(:query,@query) %>  
    <%= submit_tag('Search') %>
  <%- end -%>
</div>

<h1>Search results for <%= icon_link_to(@query, 'mini') %></h1>

<%- if @sites.empty? -%>
  <em>nothing found</em>
<%- else -%>
  <ul>
    <%- @sites.each do |site| -%>
      <%- site.claims.each do |claim| -%>
        <li>
          claimed by <%= small_user(claim.user) %>
        </li>
      <%- end -%>
      <%- site.connections.each do |connection| -%>
        <li>
          linked to <%=h connection.name %> 
          by <%= small_user(connection.user) %>
        </li>
      <%- end -%>
    <%- end -%>
  </ul>
<%- end -%>

<%- if logged_in? -%>
  <%- form_for :claim, :url => claims_path do |form| -%>
    <%= form.hidden_field(:url) %>
    <%= submit_tag('Claim this url') %>
  <%- end -%>
  <%- form_for :connection, :url => connections_path do |form| -%>
    <label for="connection_url">Connect this link to:</label>
    <%= form.hidden_field(:url) %>

    <label for="connection_name">with</label>
    <%= form.text_field(:name) %>

    <%= submit_tag('Connect') %>
  <%- end -%>
<%- end -%>

